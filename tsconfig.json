{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "es6",
    "moduleResolution": "node",
    "noEmit": true,
    "noEmitOnError": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "target": "es2017",
    "skipLibCheck": true,
    "paths": {
      "k19/tests/*": [
        "tests/*"
      ],
      "k19/*": [
        "app/*",
        "lib/select-sass-theme/app/*"
      ],
      "*": [
        "types/*"
      ],
      "ember-cli-flash/*": [
        "node_modules/ember-cli-flash/index.d.ts"
      ],
      "fetch": [
        "node_modules/ember-fetch"
      ],
      "select-sass-theme": [
        "lib/select-sass-theme/addon"
      ],
      "select-sass-theme/*": [
        "lib/select-sass-theme/addon/*"
      ],
      "select-sass-theme/test-support": [
        "lib/select-sass-theme/addon-test-support"
      ],
      "select-sass-theme/test-support/*": [
        "lib/select-sass-theme/addon-test-support/*"
      ]
    }
  },
  "include": [
    "app/**/*",
    "mirage/**/*",
    "tests/**/*",
    "types/**/*",
    "lib/select-sass-theme"
  ]
}
